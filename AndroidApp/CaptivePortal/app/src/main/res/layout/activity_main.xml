<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ericsson.captiveportal.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rules"
                android:id="@+id/action1Btn" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Captive Portal"
                android:id="@+id/action2Btn" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebServer"
                android:id="@+id/action3Btn" />
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HotSpot"
            android:id="@+id/hotspotBtn" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fillViewport="true"
            android:id="@+id/infoScrlVw" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Started"
                android:minLines="1"
                android:maxLines="400"
                android:id="@+id/infoTxtVw" />

        </ScrollView>

</LinearLayout>
